<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_menu_screen_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#B6C7C7C7">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_popup_round"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="200dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dismiss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:scaleType="fitEnd"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_back_cross" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".9"
                android:gravity="center_horizontal"
                android:scrollbarStyle="outsideInset"
                android:text="INFORMATION"
                android:theme="@style/PopupInfo.Title" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PROJECT NAME"
                    android:gravity="center_horizontal"
                    android:theme="@style/PopupInfo.Label" />

                <TextView
                    android:id="@+id/project_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Projekt Munster"
                    android:gravity="center_horizontal"
                    android:theme="@style/PopupInfo.LabelInfo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/building_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BUILDING NAME"
                    android:gravity="center_horizontal"
                    android:theme="@style/PopupInfo.Label" />

                <TextView
                    android:id="@+id/building_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="HAUS-1"
                    android:theme="@style/PopupInfo.LabelInfo" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/flat_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FLAT NAME"
                    android:gravity="center_horizontal"
                    android:theme="@style/PopupInfo.Label" />

                <TextView
                    android:id="@+id/flat_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="01-03-02"
                    android:theme="@style/PopupInfo.LabelInfo" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>